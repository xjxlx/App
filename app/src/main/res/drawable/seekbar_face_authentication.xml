<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:height="49dp">
        <shape>
            <corners android:radius="@dimen/dp_25" />
            <solid android:color="@color/gray_10" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:height="49dp">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:endColor="@color/gray_10"
                    android:startColor="@color/black_20" />
                <corners android:radius="@dimen/dp_25" />
            </shape>
        </clip>
    </item>
</layer-list>