<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.animation.AnimationMapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gif"
            style="@style/style_todo_item"
            android:text="自定义GIF" />

        <TextView
            android:id="@+id/tv_radiation_animation"
            style="@style/style_todo_item"
            android:text="自定义放射动画" />

        <TextView
            android:id="@+id/tv_selector_time_dialog"
            style="@style/style_todo_item"
            android:text="自定义时间选择器的弹窗" />

        <TextView
            android:id="@+id/tv_custom_viewpager"
            style="@style/style_todo_item"
            android:text="自定义viewPager" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>