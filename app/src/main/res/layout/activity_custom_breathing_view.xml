<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_1"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    tools:context=".ui.activity.widget.CustomBreathingViewActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rl_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="开始扩散" />

            <Button
                android:id="@+id/btn_start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="小到大" />

            <Button
                android:id="@+id/btn_start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="大到小" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_temp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:text="停止所有" />
        </LinearLayout>

        <com.android.app.widget.BreatheView2
            android:id="@+id/bv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_temp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toEndOf="@+id/rl_temp" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>