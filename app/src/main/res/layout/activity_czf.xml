<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.activity.kotlin.CzfActivity">

    <com.android.helper.widget.ElectricityView
        android:id="@+id/electricityView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_marginEnd="@dimen/dp_20" />

    <com.android.helper.widget.ChargingProgressView
        android:id="@+id/cpv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/electricityView"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpv_progress"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="100dp"
        android:layout_marginRight="@dimen/dp_30" />

</RelativeLayout>